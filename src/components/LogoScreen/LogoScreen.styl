.logo
    width: 100%
    height: 100%
    display: flex
    align-items: center
    justify-content: center
    position: fixed
    top: 0px
    left: 0px
    background-color: black

    img
        width: 90%

.logo-enter-active,
.logo-leave-active
    transition: all 2s ease-in-out

.logo-enter-from,
.logo-leave-to
    opacity: 0