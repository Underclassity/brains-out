.menu
    &--overlay
        width: 100%
        height: 100%
        display: flex
        justify-content: center
        align-items: center
        position: fixed
        top: 0px
        left: 0px
        background-color: cyan
        user-select: none
        z-index: 100500

    &--end
        background-color: #FF0000B2

    &--started
        background-color: transparent

    &--main
        box-sizing: border-box
        border-radius: 20px
        border: 5px solid #222
        padding: 40px 40px 20px 40px
        background-color: #E77812
        -webkit-text-stroke: 1px black
        max-width: 700px

        @media(max-width 767px)
            border: 2px solid #222
            width: 95%
            padding: 20px

    &--logo
        width: 100%

        img
            width: 100%
            max-width: 500px

        @media(max-width 767px)
            max-width: 300px

        @media(max-height 900px)
            max-width: 300px

    &--title
        font-size: 52px
        line-height: 56px

        @media(max-width 767px)
            font-size: 26px
            line-height: 30px

        @media(max-height 900px)
            font-size: 26px
            line-height: 30px

    &--label
        font-size: 32px
        line-height: 36px

        @media(max-width 767px)
            font-size 28px
            line-height: 32px

        @media(max-height 900px)
            font-size 28px
            line-height: 32px

    &--selector
        display: flex
        align-items: center
        justify-content: space-between
        flex-wrap: nowrap
        margin-bottom: 20px

        &.focused
            background-color: rgba(blue, 0.1)

        &:last-child
            margin-bottom: 0px

        &--prev
            border-left: solid 0px transparent
            border-right: solid 52px #222
            border-top: solid 26px transparent
            border-bottom: solid 26px transparent
            position: relative
            cursor: pointer
            margin-right: 8px
            box-shadow: inset 0px 20px 20px -10px rgba(white, 0.3), inset 0px -20px 20px -10px rgba(black, 0.3)

            @media(max-width 767px)
                transform: scale(0.7)

            @media(max-height 900px)
                transform: scale(0.7)

            &:before
                content: ""
                position: absolute
                top: -50%
                left: -50%
                border-left: solid 0px transparent
                border-right: solid 44px orange
                border-top: solid 20px transparent
                border-bottom: solid 20px transparent
                transform: translate(5px, -50%)

            &:hover
                &:before
                    border-right: solid 44px rgba(orange, 0.6)

        &--next
            border-left: solid 52px #222
            border-right: solid 0px transparent
            border-top: solid 26px transparent
            border-bottom: solid 26px transparent
            position: relative
            cursor: pointer
            margin-left: 8px
            box-shadow: inset 0px 20px 20px -10px rgba(white, 0.3), inset 0px -20px 20px -10px rgba(black, 0.3)

            @media(max-width 767px)
                transform: scale(0.7)

            @media(max-height 900px)
                transform: scale(0.7)

            &:before
                content: ""
                position: absolute
                top: 0px
                left: 0px
                border-left: solid 44px orange
                border-right: solid 0px transparent
                border-top: solid 20px transparent
                border-bottom: solid 20px transparent
                transform: translate(calc(-100% - 5px), -50%)

            &:hover
                &:before
                    border-left: solid 44px rgba(orange, 0.6)

        &--value
            box-sizing: border-box
            border-radius: 20px
            border: 5px solid #222
            padding: 8px 16px
            background-color: #E77812
            font-size: 32px
            line-height: 36px
            background-color: orange
            -webkit-text-stroke: 1px black
            position: relative
            box-shadow: inset 0px 20px 20px -10px rgba(white, 0.3), inset 0px -20px 20px -10px rgba(black, 0.3)

            @media(max-width 767px)
                border-radius: 10px
                padding: 8px
                border: 2px solid #222
                font-size: 28px
                line-height: 32px

            @media(max-height 900px)
                border-radius: 10px
                padding: 8px
                border: 2px solid #222
                font-size: 28px
                line-height: 32px

            &:before
                content: ''
                position: absolute
                top: 20px
                left: 15px
                width: 10px
                height: 10px
                background-color: rgba(white, 0.2)
                border-radius: 50%

    &--item
    &--button
        width: 100%
        padding: 8px 16px
        font-size: 52px
        line-height: 56px
        margin-bottom: 20px
        box-sizing: border-box
        border-radius: 20px
        border: 5px solid #222
        background-color: yellow
        -webkit-text-stroke: 1px black
        cursor: pointer
        transition: background-color 300ms ease-in-out
        position: relative
        box-shadow: inset 0px 20px 20px -10px rgba(white, 0.3), inset 0px -20px 20px -10px rgba(black, 0.3)

        @media(max-width 767px)
            border: 2px solid #222
            font-size: 26px
            line-height: 30px

        @media(max-height 900px)
            border: 2px solid #222
            font-size: 26px
            line-height: 30px

        &:before
            content: ''
            position: absolute
            top: 20px
            left: 15px
            width: 10px
            height: 10px
            background-color: rgba(white, 0.2)
            border-radius: 50%

        &.focused,
        &:hover
            background-color: rgba(yellow, 0.6)

        &:last-child
            margin-bottom: 0px

        &--new
            background-color: green

            &.focused,
            &:hover
                background-color: rgba(green, 0.6)

        &--red
            background-color: red

            &.focused,
            &:hover
                background-color: rgba(red, 0.6)

    &--item
        display: flex
        align-items: center
        justify-content: center

        &--icon
            font-size: 40px
            line-height: 40px
            width: 40px
            height: 40px
            margin-right: 8px

    &--version
        font-size: 16px
        line-height: 18px
        margin-bottom: 10px

    // &--button
    //     margin-bottom: 0px
    //     margin-right: 20px

    //     &:last-child
    //         margin-right: 0px

    &--buttons
        width: 100%
        display: flex
        justify-content: center
        align-items: center
        flex-direction: column
        margin-bottom: 20px
        margin-top: 20px

        &:last-child
            margin-bottom: 0px

    &--columns
        width: 100%
        display: flex
        align-items: stretch
        justify-content: stretch
        flex-wrap: wrap

    &--achievement
        width: calc(100% / 3 - 10px)
        display: flex
        align-items: center
        justify-content: center
        flex-direction: column
        margin-bottom: 10px
        margin-right: 10px
        padding: 10px
        border: 2px solid black
        border-radius: 20px
        box-sizing: border-box
        background-color: #E7C512
        box-shadow: inset 0px 20px 20px -10px rgba(white, 0.3), inset 0px -20px 20px -10px rgba(black, 0.3)

        @media(max-width 768px)
            width: 100%
            margin-right: 0px

        &:before
            content: ""
            position: absolute
            top: -50%
            left: -50%
            border-left: solid 0px transparent
            border-right: solid 44px orange
            border-top: solid 20px transparent
            border-bottom: solid 20px transparent
            transform: translate(5px, -50%)

        &--icon
            width: 30px
            heightL 30px
            font-size: 30px
            line-height: 30px
            margin-right: 10px

        &--row
            display: flex
            justify-content: center
            align-items: center

        &--title
            font-size: 24px
            line-height: 28px
            margin-bottom: 8px

        &:nth-child(3n)
            margin-right: 0px

    &--assets
        display: flex
        align-items: center
        justify-content: flex-start
        font-size: 16px
        line-height: 18px
        margin-bottom: 8px

        &:last-child
            margin-bottom: 0px

        &--link
            color: white
            -webkit-text-stroke: 1px black
            margin-right: 8px

            &:last-child
                margin-right: 0px

        &--author
            margin-right: 8px

        &--title
            font-size: 28px
            line-height: 32px
            margin-top: 16px
            margin-bottom: 16px

    &--link
        display: block
        text-align: left
        font-size: 24px
        line-height: 32px
        color: white
        -webkit-text-stroke: 1px black
        margin-bottom: 10px