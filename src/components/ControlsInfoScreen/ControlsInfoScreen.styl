.controls-info
    width: 100%
    height: 100%
    position: fixed
    top: 0
    left: 0
    overflow: auto
    background-color: var(--orange, #E77812)
    z-index: 100500

    &--content
        width: 100%
        height: 100%
        max-width: 1440px
        margin: 0 auto
        padding: 20px
        box-sizing: border-box

    &--columns
        width: 100%
        display: flex
        justify-content: space-between
        align-items: stretch
        margin-bottom: 20px

        &:last-child
            margin-bottom: 0px

        .controls-info--column:last-child
            .controls-info--key
                margin-right: 0px

        @media(max-width 768px)
            flex-direction: column

    &--column
        width: calc(50% - 10px)

        @media(max-width 768px)
            width: 100%

        p
            font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif
            font-weight: 500
            font-size: 16px
            line-height: 20px
            margin-bottom: 10px

            &:last-child
                margin-bottom: 0px

    &--images
        display: flex
        align-items: center
        justify-content: center
        flex-wrap: nowrap
        width: auto
        margin-right: 20px
        flex-shrink: 0

        img
            display: block

        @media(max-width 768px)
            width: 100%
            margin-right: 0px
            margin-bottom: 10px

        .controls-info--image
            &:first-child
                margin-right: 10px

            &:last-child
                width: 100%

    &--text
        width: 100%

    &--levels
        margin-right: 20px

        @media(max-width 768px)
            max-height: 300px

    &--keyboard
    &--controller
        max-height: 140px
        margin-bottom: 20px

    &--controller
        @media(max-width 768px)
            margin-top: 20px

    &--pit
        aspect-ratio: 1

    &--pit
    &--levels
        @media(max-width 768px)
            width: 100%

    &--key
        width: 100%
        display: flex
        justify-content: flex-start
        align-items: center
        margin-right: 10px
        margin-bottom: 10px
        font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif

        &--img
            display: flex
            align-items: center
            justify-content: center
            margin-right: 10px

            img
                height: 32px

            span
                margin-left: 10px
                margin-right: 10px

        &--title
            text-align: left
            font-weight: 500
            font-size: 16px
            line-height: 20px

    &--buttons
        width: 100%
        display: flex
        align-items: center
        justify-content: center
        margin-top: 20px

    &--button
        width: 100%
        max-width: 400px
        padding: 8px 16px
        font-size: 52px
        line-height: 56px
        box-sizing: border-box
        border-radius: 20px
        border: 5px solid #222
        background-color: yellow
        -webkit-text-stroke: 1px var(--black, #000)
        cursor: pointer
        transition: background-color 300ms ease-in-out
        position: relative
        box-shadow: inset 0px 20px 20px -10px rgba(white, 0.3), inset 0px -20px 20px -10px rgba(black, 0.3)
        user-select: none

        @media(max-width 767px)
            border: 2px solid #222
            font-size: 26px
            line-height: 30px

        @media(max-height 900px)
            border: 2px solid #222
            font-size: 26px
            line-height: 30px

        &:before
            content: ''
            position: absolute
            top: 20px
            left: 15px
            width: 10px
            height: 10px
            background-color: rgba(white, 0.2)
            border-radius: 50%

        &.focused,
        &:hover
            background-color: rgba(yellow, 0.6)

.logo-enter-active,
.logo-leave-active
    transition: all 2s ease-in-out

.logo-enter-from,
.logo-leave-to
    opacity: 0