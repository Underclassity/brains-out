.loading
    background-color: black
    position: fixed
    top: 0px
    left: 0px
    width: 100%
    height: 100%
    display: flex
    align-items: center
    justify-content: center
    flex-direction: column
    font-size: 52px
    line-height: 56px
    -webkit-text-stroke: 1px black;
    padding: 40px
    box-sizing: border-box

    &--glare
        position: relative
        box-shadow: inset 0px 20px 20px -10px rgba(white, 0.3), inset 0px -20px 20px -10px rgba(black, 0.3)

    @media(max-width 768px)
        font-size: 26px
        line-height: 30px

    &--title
        margin-bottom: 40px
        -webkit-text-stroke: 1px #222;

        @media(max-width 768px)
            margin-bottom: 20px

    &--dots
        width: 20px
        display: inline-block
        text-align: left

    &--bar
        &--container
            width: 100%
            height: 60px
            overflow: hidden
            background-color: green
            border-radius: 4px
            border: 1px solid #222

            @media(max-width 768px)
                height: 30px

        &--line
            width: 100%
            height: 100%
            background-color: yellow
            transform: translateX(-50%)

.loading-enter-active,
.loading-leave-active
    transition: all 2s ease-in-out

.loading-enter-from,
.loading-leave-to
    opacity: 0