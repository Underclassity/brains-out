.popup
    &--overlay
        width: 100%
        height: 100%
        position: fixed
        top: 0px
        left: 0px
        display: flex
        align-items: center
        justify-content: center
        flex-direction: column
        background-color: black

    &--glare
        position: relative
        box-shadow: inset 0px 20px 20px -10px rgba(white, 0.3), inset 0px -20px 20px -10px rgba(black, 0.3)

        &:before
            content: ''
            position: absolute
            top: 20px
            left: 15px
            width: 10px
            height: 10px
            background-color: rgba(white, 0.2)
            border-radius: 50%

    &--main
        max-width: 500px
        box-sizing: border-box
        border-radius: 20px
        border: 5px solid #222
        padding: 40px
        background-color: #E77812
        -webkit-text-stroke: 1px black;

        @media(max-width 767px)
            padding: 20px
            width: 95%
            border: 2px solid #222

    &--desc
        font-size: 48px
        margin-bottom: 40px

        @media(max-width 767px)
            margin-bottom: 20px
            font-size: 24px

    &--buttons
        width: 100%
        display: flex
        justify-content: center
        align-items: center

    &--button
        font-size: 48px
        line-height: 52px
        padding: 16px 32px
        border-radius: 10px
        border: 2px solid #222
        cursor: pointer
        user-select: none
        transition: background-color 300ms ease-in-out

        @media(max-width 767px)
            padding: 8px 16px
            font-size: 24px

        &--red
            background-color: red

            &:hover
                background-color: rgba(red, 0.6)

        &--green
            background-color: lime

            &:hover
                background-color: rgba(lime, 0.6)

.v-enter-active
.v-leave-active
    transition: opacity 0.5s ease;

.v-enter-from
.v-leave-to
    opacity: 0;