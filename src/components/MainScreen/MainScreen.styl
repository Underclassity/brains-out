.main
    width: 100vw
    height: 100vh
    display: flex
    flex-direction: column
    justify-content: space-between
    align-items: center
    box-sizing: border-box
    position: fixed
    top: 0px
    left: 0px

.container
    width: 100%
    height: 100%
    box-sizing: border-box

    &--controls
        height: 60%

.pit-size-select
    position: fixed
    top: 4px
    right: 4px

.dev-buttons
    position: fixed
    bottom: 10px
    left: 10px
    display: flex
    justify-content: space-between
    align-items: center

.dev-button
    background-color: rgba(#333, 0.8)
    color: #fff
    border-radius: 20px
    user-select: none
    padding: 10px
    margin-right: 10px
    cursor: pointer
    transition: background-color 300ms ease-in-out, color 300ms ease-in-out

    &:hover
        color: #000
        background-color: rgba(#333, 0.4)

    &:last-child
        margin-right: 0px

.dev-menu
    position: fixed
    padding: 10px
    background-color: rgba(#333, 0.8)
    border-radius: 20px
    user-select: none
    bottom: 10px
    right: 10px
    display: flex
    flex-direction: column
    align-items: flex-start
    justify-content: flex-start

    @media(max-width 768px)
        bottom: calc(40% + 10px)

.controls
    width: 100%
    height: 40%
    position: relative
    background-color: #e67626
    box-shadow: inset 0px 20px 20px -10px rgba(white, 0.3), inset 0px -20px 20px -10px rgba(black, 0.3)
    box-sizing: border-box
    display: flex
    flex-direction: column
    justify-content: center
    align-items: center
    padding: 10px 10px 30px 10px
    user-select: none

    &:before
        content: ''
        position: absolute
        top: 20px
        left: 15px
        width: 10px
        height: 10px
        background-color: rgba(white, 0.2)
        border-radius: 50%

    &--columns
        width: 100%
        display: flex
        justify-content: space-between
        align-items: center

    &--column
        width: calc(50% - 4px)

        &--buttons
            display: flex
            justify-content: center
            align-items: center
            flex-direction: column

        .controls--button
            margin-bottom: 10px

            &:last-child
                margin-bottom: 0px

    &--buttons
        display: flex
        justify-content: space-between
        align-items: center
        margin-top: 10px
        margin-bottom: 10px

        .controls--button
            padding: 4px 8px
            margin-bottom: 0px

        .controls--button:first-child
            margin-right: 10px

    &--button
        text-align: center
        padding: 4px
        box-sizing: border-box
        background-color: #fd0012
        box-shadow: inset 0px 20px 20px -10px rgba(white, 0.3), inset 0px -20px 20px -10px rgba(black, 0.3)
        border: 2px solid black
        border-radius: 10px

        span
            height: 40px
            font-size: 40px
            line-height: 40px

        &--a
            .material-symbols-outlined
                transform: rotate(-90deg)

        &--d
            .material-symbols-outlined
                transform: rotateZ(-90deg) rotateX(180deg)

        &--q
            .material-symbols-outlined
                transform: rotateX(180deg) rotateZ(-90deg)

        &--e
            .material-symbols-outlined
                transform: rotate(90deg)

        &--s
            .material-symbols-outlined
                transform: rotateX(180deg)

        &--w
            .material-symbols-outlined
                transform: rotate(15deg)

    &--spacebar
        margin-top: 10px
        width: 100%

.control-item
    width: 60px
    height: 60px
    border-radius: 4px
    position: absolute
    background-color: rgba(#ccc, 0.3)
    cursor: pointer
    display: flex
    justify-content: center
    align-items: center
    transition: background-color 300ms ease-in-out

    &:hover
        background-color: rgba(#ccc, 0.8)

    &-left
        top: calc(50% - 30px)
        left: 0px

        &--first
            top: calc(50% - 120px)
            left: 0px

        &--last
            top: calc(50% + 60px)
            left: 0px

    &-right
        top: calc(50% - 30px)
        right: 0px

        &--first
            top: calc(50% - 120px)
            right: 0px

        &--last
            top: calc(50% + 60px)
            right: 0px

    &-top
        &--first
            top: 0px
            left: calc(50% - 120px)

        &--last
            top: 0px
            left: calc(50% + 60px)

    &-bottom
        &--first
            bottom: 0px
            left: calc(50% - 120px)

        &--last
            bottom: 0px
            left: calc(50% + 60px)

    &--drop
        top: calc(50% - 30px)
        right: 120px

        @media(max-aspect-ratio 2/3)
            top: unset
            right: unset
            bottom: 60px
            left: calc(50% - 30px)

.navigation
    width: calc(100% - 20px)
    position: fixed
    top: 10px
    left: 10px
    display: flex
    align-items: center
    justify-content: center
    user-select: none

    @media(max-width 767px)
        flex-wrap: wrap
        width: calc(100% - 44px - 10px * 2 - 4px)

    &--item
        font-size: 40px
        line-height: 40px
        box-sizing: border-box
        border-radius: 20px
        border: 5px solid #222
        padding: 8px 16px
        background-color: #e7c335
        -webkit-text-stroke: 1px black
        margin-right: 10px
        transition: background-color 300ms ease-in-out
        cursor: pointer
        position: relative
        box-shadow: inset 0px 20px 20px -10px rgba(white, 0.3), inset 0px -20px 20px -10px rgba(black, 0.3)
        transition: background-color 2s
        position: relative
        user-select: none

        @media(max-width 767px)
            border: 2px solid #222
            font-size: 18px
            line-height: 24px
            // margin-right: 0px
            padding: 4px 10px

        &:before
            content: ''
            position: absolute
            top: 20px
            left: 15px
            width: 10px
            height: 10px
            background-color: rgba(white, 0.2)
            border-radius: 50%

            @media(max-width 768px)
                display: none

        &:last-child
            margin-right: 0px

            @media(max-width 768px)
                margin-top: 4px

        &--blinking
            animation: blinker 2s linear infinite

        &--inc
            position: absolute
            top: calc(66px + 20px)
            left: 50%
            // color: #FF4C4C
            transform: translateX(-50%)

            &--yellow
                color: #fafa0c

            &--red
                color: #fa140c

    &--menu
        position: fixed
        top: 10px
        right: 10px
        padding: 8px
        font-size: 0px
        line-height: 0px

        &:hover
            background-color: #b99816

.dev-menu
    &--item
        width: 100%
        display: flex
        align-items: center
        justify-content: space-between
        margin-bottom: 10px

        @media(max-width 768px)
            font-size: 16px
            line-height: 20px
            margin-bottom: 4px

        span
        label
            user-select: none

        select
        input
            user-select: none
            margin-left: 4px

        label
        .label
            width: 100%

        label
        span
            text-align: left

        &:last-child
            margin-bottom: 0px

.levels
    position: fixed
    display: flex
    align-items: center
    justify-content: center
    flex-direction: column
    top: 50%
    left: 50px
    transform: translateY(-50%)
    background-color: #e7c335
    padding: 10px
    border-radius: 20px
    border: 5px solid #222
    z-index: 0

    @media(max-width 768px)
        width: 95%
        padding: 4px
        border: 2px solid #222
        flex-direction: row
        flex-wrap: nowrap
        top: calc(60% - 50px)
        left: 50%
        transform: translateX(-50%)

    &--flip
        padding: 4px
        border: 2px solid #222
        flex-direction: row
        flex-wrap: nowrap
        top: calc(60% - 50px)
        left: 50%
        transform: translateX(-50%)

        .level-item
            width: 30px
            min-width: unset
            margin-bottom: 0px
            border: 2px solid #222
            margin-right 2px

.level-item
    width: 60px
    // width: 60px
    // height: 60px
    box-sizing: border-box
    border-radius: 20px
    border: 5px solid #222
    background-color: #e7c335
    -webkit-text-stroke: 1px black
    transition: background-color 300ms ease-in-out
    cursor: pointer
    position: relative
    box-shadow: inset 0px 20px 20px -10px rgba(white, 0.3), inset 0px -20px 20px -10px rgba(black, 0.3)
    margin-bottom: 2px
    aspect-ratio: 1

    @media(max-height 920px)
        width: 40px
        padding: 8px

    @media(max-height 600px)
        width: 30px
        padding: 4px

    @media(max-width 768px)
        width: 100%
        max-width: 40px
        margin-bottom: 0px
        border: 2px solid #222
        // width: 30px
        // height: 30px
        margin-right 2px

    &:last-child
        margin-bottom: 0px

        @media(max-width 768px)
            margin-right: 0px

.error
    &-overlay
        position fixed
        top: 0
        left: 0
        width: 100%
        height: 100%
        display: flex
        align-items: center
        justify-content: center
        background-color: rgba(red, 0.6)
        z-index: 100500

    &-text
        font-size: 50px
        line-height: 56px

@keyframes blinker
  50%
    background-color: #FF4C4C

.slide-up-enter-active
    transition: all 0.3s ease-out

.slide-up-enter-from,
.slide-up-leave-to
    transform: translateX(-50%) translateY(50%)
    opacity: 0