.overlay
    position: fixed
    top: 0px
    left: 0px
    width: 100vw
    height: 100vh
    display: flex
    align-items: center
    justify-content: center
    background-color: rgba(#fafafa, 0.8)

.menu
    min-width: 250px
    display: flex
    align-items: center
    justify-content: center
    flex-wrap: wrap
    flex-direction: column
    padding: 20px
    background-color: rgba(#333, 0.8)
    border-radius: 20px

    @media(max-width 600px)
        width: calc(90% - 40px)

    span
    label
        user-select: none

    select
    input
        user-select: none
        margin-left: 4px

    &-icon
        margin-right: 4px

    &-item
        width: 100%
        display: flex
        justify-content: space-between
        align-items: center
        margin-top: 4px
        margin-bottom: 4px

        label
        .label
            width: 100%

        label
        span
            text-align: left

        &:last-child
            margin-bottom: 0px

hr
    width: 100%

.material-symbols-outlined
    user-select: none

.link
    user-select: none
    cursor: pointer
    transition: color 300ms ease-in-out

    &:hover
        color: rgba(#ccc, 0.6)

.v-enter-active
.v-leave-active
    transition: opacity 0.5s ease;

.v-enter-from
.v-leave-to
    opacity: 0;