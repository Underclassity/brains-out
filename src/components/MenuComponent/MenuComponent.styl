.overlay
    position: fixed
    top: 0px
    left: 0px
    width: 100vw
    height: 100vh
    display: flex
    align-items: center
    justify-content: center
    background-color: rgba(#fafafa, 0.8)

.menu
    display: flex
    align-items: center
    justify-content: center
    flex-wrap: wrap
    flex-direction: column
    padding: 20px
    background-color: rgba(#333, 0.8)
    border-radius: 20px

    hr
        width: 100%

    .link
        cursor: pointer